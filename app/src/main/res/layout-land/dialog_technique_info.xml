<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/surface_dark"
    android:padding="24dp"
    android:minWidth="300dp"
    android:maxWidth="600dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <!-- Technique Name -->
    <TextView
        android:id="@+id/tvTechniqueName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pomodoro Technique"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        android:layout_marginBottom="24dp" />

    <!-- Work Duration Section -->
    <TextView
        android:id="@+id/tvWorkDurationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Work Duration:"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        app:layout_constraintTop_toBottomOf="@id/tvTechniqueName"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tvWorkDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25 minutes"
        android:textSize="16sp"
        android:textColor="@color/phase_work"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvWorkDurationLabel"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        android:layout_marginBottom="16dp" />

    <!-- Break Duration Section -->
    <TextView
        android:id="@+id/tvBreakDurationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Break Duration:"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        app:layout_constraintTop_toBottomOf="@id/tvWorkDuration"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tvBreakDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 minutes"
        android:textSize="16sp"
        android:textColor="@color/phase_break"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvBreakDurationLabel"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        android:layout_marginBottom="16dp" />

    <!-- Description Section -->
    <TextView
        android:id="@+id/tvDescriptionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        app:layout_constraintTop_toBottomOf="@id/tvBreakDuration"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Work for 25 minutes, then take a 5-minute break. Repeat for 4 cycles, then take a longer 25-minute break."
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        android:lineSpacingMultiplier="1.2"
        app:layout_constraintTop_toBottomOf="@id/tvDescriptionLabel"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        android:layout_marginBottom="24dp" />

    <!-- Close Button (for create dialog - full width) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancel"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Close"
        android:textSize="16sp"
        android:backgroundTint="?attr/colorSurface"
        android:textColor="?attr/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/tvDescription"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="24dp"
        app:cornerRadius="8dp" />

    <!-- Ok Button (for active dialog - full width) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOk"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Ok"
        android:textSize="16sp"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="@android:color/white"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvDescription"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="24dp"
        app:cornerRadius="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
