<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/card_background"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Success Checkmark Icon -->
        <ImageView
            android:id="@+id/ivSuccessIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/checkbox_on_background"
            android:tint="@color/success_color"
            android:contentDescription="Completed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Technique Name Badge -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipTechnique"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pomodoro"
            android:textSize="12sp"
            android:textColor="@color/text_primary"
            app:chipBackgroundColor="@color/surface_dark"
            app:chipStrokeWidth="1dp"
            app:chipStrokeColor="@color/teal_200"
            app:chipCornerRadius="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivSuccessIcon"
            android:layout_marginEnd="8dp" />

        <!-- Subject Text -->
        <TextView
            android:id="@+id/tvSubject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mathematics"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/chipTechnique"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Task Text -->
        <TextView
            android:id="@+id/tvTask"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Complete Chapter 5 exercises"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvSubject"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Time Spent Label -->
        <TextView
            android:id="@+id/tvTimeSpentLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Spent:"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvTask"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Time Spent Value -->
        <TextView
            android:id="@+id/tvTimeSpent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25 minutes"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/success_color"
            app:layout_constraintTop_toTopOf="@id/tvTimeSpentLabel"
            app:layout_constraintStart_toEndOf="@id/tvTimeSpentLabel"
            android:layout_marginStart="4dp" />

        <!-- Completion Time (Relative) -->
        <TextView
            android:id="@+id/tvCompletionTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 hours ago"
            android:textSize="12sp"
            android:textColor="@color/text_disabled"
            app:layout_constraintTop_toTopOf="@id/tvTimeSpentLabel"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
