<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:padding="24dp">

    <!-- Technique Name Badge/Chip -->
    <com.google.android.material.chip.Chip
        android:id="@+id/chipTechniqueName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pomodoro"
        android:textSize="12sp"
        android:textColor="@color/text_primary"
        app:chipBackgroundColor="@color/teal_700"
        app:chipCornerRadius="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Minimize/Maximize Button (Optional) -->
    <ImageButton
        android:id="@+id/btnMinimize"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@android:drawable/arrow_down_float"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Minimize"
        android:tint="@color/text_secondary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Cycle Counter TextView (for multi-cycle techniques) -->
    <TextView
        android:id="@+id/tvCycleCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cycle 1"
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/chipTechniqueName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Phase Indicator TextView -->
    <TextView
        android:id="@+id/tvPhaseIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WORK SESSION"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/phase_work"
        app:layout_constraintTop_toBottomOf="@id/tvCycleCounter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp" />

    <!-- Circular Progress Container -->
    <FrameLayout
        android:id="@+id/progressContainer"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/tvPhaseIndicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp">

        <!-- Circular Progress Background -->
        <View
            android:id="@+id/progressBarBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_background" />

        <!-- Circular Progress Indicator (will be controlled programmatically) -->
        <View
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_progress"
            android:alpha="0.75" />

    </FrameLayout>

    <!-- Large Timer Display (MM:SS) - Centered in Circular Progress -->
    <TextView
        android:id="@+id/tvTimerDisplay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="25:00"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:maxLines="1"
        android:ellipsize="none"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@id/progressContainer"
        app:layout_constraintStart_toStartOf="@id/progressContainer"
        app:layout_constraintEnd_toEndOf="@id/progressContainer"
        app:layout_constraintBottom_toBottomOf="@id/progressContainer" />

    <!-- Linear Progress Bar -->
    <ProgressBar
        android:id="@+id/linearProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:max="100"
        android:progress="100"
        android:progressTint="@color/teal_200"
        android:progressBackgroundTint="@color/surface_dark"
        app:layout_constraintTop_toBottomOf="@id/progressContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp" />

    <!-- Time Remaining Text -->
    <TextView
        android:id="@+id/tvTimeRemaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25:00 remaining"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        app:layout_constraintTop_toBottomOf="@id/linearProgressBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="24dp" />

    <!-- Buttons Row (Work Session) -->
    <LinearLayout
        android:id="@+id/buttonRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvTimeRemaining"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnMarkDone">

        <!-- Cancel Session Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelSession"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:textSize="16sp"
            android:backgroundTint="?attr/colorSurface"
            android:textColor="?attr/colorPrimary"
            android:layout_marginEnd="8dp"
            app:cornerRadius="8dp" />

        <!--  Pause Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPause"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Pause"
            android:textSize="16sp"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"
            app:cornerRadius="8dp" />

    </LinearLayout>

    <!-- Break Action Buttons Row (Break Session) -->
    <LinearLayout
        android:id="@+id/breakButtonRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvTimeRemaining"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnMarkDone">

        <!-- Skip Break Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSkipBreak"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Skip Break"
            android:textSize="16sp"
            android:backgroundTint="?attr/colorSurface"
            android:textColor="?attr/colorPrimary"
            android:layout_marginEnd="8dp"
            app:cornerRadius="8dp" />

        <!-- Extend Break Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnExtendBreak"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Extend Break"
            android:textSize="16sp"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"
            app:cornerRadius="8dp" />

    </LinearLayout>

    <!-- Mark as Done Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMarkDone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Mark as Done"
        android:textSize="16sp"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="@android:color/white"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/buttonRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        app:cornerRadius="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
