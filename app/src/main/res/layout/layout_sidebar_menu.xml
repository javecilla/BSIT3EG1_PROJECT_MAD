<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sidebarMenu"
    android:layout_width="180dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/surface_dark"
    android:elevation="8dp"
    android:padding="16dp">

    <!-- Close Button (Top Right) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCloseSidebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Close"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:backgroundTint="@android:color/transparent"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="8dp" />
    </RelativeLayout>

    <!-- Navigation Items -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="top">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNavHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="@color/text_secondary"
            android:backgroundTint="@android:color/transparent"
            android:textAlignment="textStart"
            android:padding="16dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNavAboutProject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Project"
            android:textColor="@color/text_secondary"
            android:backgroundTint="@android:color/transparent"
            android:textAlignment="textStart"
            android:padding="16dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNavAboutTeam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Team"
            android:textColor="@color/text_secondary"
            android:backgroundTint="@android:color/transparent"
            android:textAlignment="textStart"
            android:padding="16dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNavLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="@color/text_secondary"
            android:backgroundTint="@android:color/transparent"
            android:textAlignment="textStart"
            android:padding="16dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            app:cornerRadius="8dp" />
    </LinearLayout>

    <!-- User Name (Bottom) -->
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="John Doe"
        android:textColor="@color/purple_500"
        android:textSize="14sp"
        android:padding="16dp"
        android:gravity="start"
        android:textAlignment="textStart" />
</LinearLayout>
