<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/surface_dark"
    android:padding="24dp"
    android:minWidth="300dp"
    android:maxWidth="400dp">

    <!-- Celebration Emoji/Text -->
    <TextView
        android:id="@+id/tvCelebration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŽ‰ Goal Completed!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/success_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp" />

    <!-- Subject Section -->
    <TextView
        android:id="@+id/tvSubjectLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject:"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        app:layout_constraintTop_toBottomOf="@id/tvCelebration"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tvSubject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mathematics"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvSubjectLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Task Section -->
    <TextView
        android:id="@+id/tvTaskLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task:"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        app:layout_constraintTop_toBottomOf="@id/tvSubject"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tvTask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Complete Chapter 5 exercises"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvTaskLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Time Spent Section -->
    <TextView
        android:id="@+id/tvTimeSpentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Spent:"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        app:layout_constraintTop_toBottomOf="@id/tvTask"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tvTimeSpent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25 minutes"
        android:textSize="18sp"
        android:textColor="@color/success_color"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvTimeSpentLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="24dp" />

    <!-- Buttons Row -->
    <LinearLayout
        android:id="@+id/buttonRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvTimeSpent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Done Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDone"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Done"
            android:textSize="16sp"
            android:backgroundTint="?attr/colorSurface"
            android:textColor="?attr/colorPrimary"
            android:layout_marginEnd="8dp"
            app:cornerRadius="8dp" />

        <!-- Create New Goal Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCreateNewGoal"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Create New"
            android:textSize="16sp"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"
            app:cornerRadius="8dp" />

    </LinearLayout>

    <!-- Ok Button (for break completion - full width) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOk"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Ok"
        android:textSize="16sp"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="@android:color/white"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvTimeSpent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="24dp"
        app:cornerRadius="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
