<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- Sticky Header -->
    <ImageView
        android:id="@+id/ivLogoName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/focus_flow_logo_name"
        android:contentDescription="FocusFlow Logo and Name"
        android:adjustViewBounds="true"
        android:layout_marginTop="15dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:textColor="@color/text_primary"
        android:backgroundTint="@android:color/transparent"
        android:textStyle="bold"
        android:padding="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Divider Below Header -->
    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/ivLogoName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Hero Image -->
            <ImageView
                android:id="@+id/ivHeroImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/about_project_hero"
                android:contentDescription="FocusFlow App Hero Image"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_marginBottom="24dp" />

            <!-- Description Section -->
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FocusFlow is a minimalist, single-session study companion built for students. It's designed to help you lock in your focus by setting one active goal at a time.\n\nWith FocusFlow, you can choose from various proven productivity techniques including the Pomodoro Technique, 52/17 method, 90-Minute Ultradian rhythm, Sprint sessions, and Deadline Simulation. Each technique is carefully designed to match different study styles and work patterns.\n\nThe app features a clean, distraction-free interface that keeps you focused on what matters most - your current study session. Track your progress, manage breaks effectively, and build better study habits one session at a time. FocusFlow helps you maintain momentum and achieve your academic goals through structured, focused work periods."
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:lineSpacingMultiplier="1.3"
                android:paddingBottom="16dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Overlay Dim -->
    <View
        android:id="@+id/overlayDim"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#80000000"
        android:alpha="0"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Sidebar -->
    <include
        android:id="@+id/sidebarMenu"
        layout="@layout/layout_sidebar_menu"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:elevation="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
